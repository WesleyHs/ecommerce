{% extends "layout.njk" %}

{% block content %}

    <section class="password container form">
        <form method="post" action="/users/forgot-password">
            {# instalar o multer #}

            <div class="header">
                <h3>Esqueceu a senha</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email}}" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Rcuperar Senha</button>
        </form>
    </section>

{% endblock content %}